@model BookLibrary.Models.Rental

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label">Books</label>
                <select asp-for="BookId" class="form-control" asp-items="Model.Books"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label">Clients</label>
                <select asp-for="ClientId" class="form-control" asp-items="Model.ClientCNPs"></select>
            </div>
            <div class="form-group">
                <label asp-for="RentalDate" class="control-label"></label>
                <input asp-for="RentalDate" class="form-control" />
                <span asp-validation-for="RentalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalDuration" class="control-label"></label>
                <input asp-for="RentalDuration" class="form-control" />
                <span asp-validation-for="RentalDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

